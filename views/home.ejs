<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <link rel="stylesheet" href="/static/style.css">

    <title>Hello, world!</title>

  </head>
  <body>
    <header>
        <nav class="navbar navbar-expand-lg ">
  <a class="navbar-brand" href="#"> <strong> YoutubeVerse </strong></a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <a class="nav-link active" href="#">Home <span class="sr-only">(current)</span></a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#">Trending</a>
      </li>
      <li class="nav-item">
        <a class="nav-link disabled" href="#">Shorts</a>
      </li>
    </ul>
    <form class="form-inline my-2 my-lg-0">
      <!-- <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search"> -->
      <a href="/logout"><button class="btn btn-outline-success my-2 my-sm-0 text-dark " style="background-color: white !important" type="button">  Logout</button></a>
    </form>
  </div>
</nav>
    </header>


<!-- 
####################################3
      Cards Start
####################################3
-->
    <div class="mt-5 container">

      <div class="row">
        <h1>Favorite Youtubers</h1>
      </div>

        <div class="row rounded flex-wrap justify-content-around" >
            <% for(let i=0; i<youtubers.length; i++){
             %>
            <div class="col  col-lg-3 col-md-5 col-sm-8 col-8  m-3 p-0  shadow card card-home align-self-center">
                <img src='<%= youtubers[i].img %>' class="img-fluid" style="height: 250px !important; width: 100%" alt="hehe">
                <h3> <em> <strong> <%= youtubers[i].name %> </strong> </em></h3>
            </div>
            <% } %>
        </div>
    </div>
<!-- 
####################################3
        Cards Ends
####################################3
-->


<!-- 
####################################3
        Table Starts
####################################3
-->
    <div class="container my-5">
      <div class="row mb-4">
        <h1>Top Youtubers</h1>
      </div>
      <table class="table table-striped table-bordered ">
        <thead class="" style="background: linear-gradient(90deg, rgba(73,69,156,1) 0%, rgba(102,51,153,1) 46%);">
          <tr>
            <th scope="col"></th>
            <th scope="col">Channel Name</th>
            <th scope="col">Subscribers</th>
            <th scope="col">Nationality</th>
          </tr>
        </thead>
        <tbody>
          <% for(let i = 0; i< youtubers.length; i++){ %>
          <tr>
            <td scope="row"><img src='<%= youtubers[i].img %>' height="30px" width="30px" style="border-radius: 50%" alt=""></td>
            <td><%= youtubers[i].name %></td>
            <td><%= youtubers[i].Subscribers %></td>
            <td><%= youtubers[i].nationality %></td>
          </tr>
        <% } %>
        </tbody>
      </table>
    </div>
<!-- 
####################################3
        Table Ends
####################################3
-->




<!-- 
####################################3
        Table Ends
####################################3
-->
<div class="container my-5">
  <div class="row">
    <h1>Trending Youtubers</h1>
  </div>
  <div class="row">
    <ul class="list-group">
      <% for(let i = youtubers.length-1 ; i>=0; i--) { %>
      <li class="list-group-item card rounded-0 my-1 shadow-sm" style="border-radius: 18px !important;"><%= youtubers[i].name %></li>
      <% } %>
    </ul>
  </div>
</div>
<!-- 
####################################3
        Table Ends
####################################3
-->






